{
	"name":        "germania-kg/base64-coder",
	"description": "Converts a selector and token pair to base64 forth and back.",

	"keywords":    [ "encode", "decode", "base64", "RandomLib", "random_compat"],

	"type":        "library",
	"license":     "MIT",

	"authors": [
		{
			"name":  "Carsten Witt",
			"email": "carstenwitt@germania-kg.de",
			"role":  "Developer"
		}
	],

  "autoload": {
      "psr-4": {
          "Germania\\Base64Coder\\": "src/"
      }
  },

  "autoload-dev": {
      "psr-4": { "tests\\": "tests/src" }
  },

	"require": {
		"psr/log": "^1.0"
	},

	"require-dev": {
		  "ircmaxell/random-lib": "^1.0",
		  "paragonie/random_compat": "2.0",
		  "monolog/monolog": "^1.16",
			"satooshi/php-coveralls": "^1.0",
			"phpunit/phpunit": "^5.2",
			"pimple/pimple": "^3.2"
	},

	"suggest": {
      "pimple/pimple": "This package provides a ServiceProvider for the famous Pimple Dependency Injection Container."
  }

}
